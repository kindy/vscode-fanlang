{
  "name": "fanlang",
  "displayName": "FanLang",
  "description": "Provides syntax highlighting and bracket matching in Fan files.",
  "version": "1.1.0",
  "publisher": "kindy",
  "license": "MIT",
  "engines": {
    "vscode": "^1.55.0"
  },
  "activationEvents": [
    "onLanguage:fan"
  ],
  "contributes": {
    "languages": [
      {
        "id": "fan",
        "aliases": [
          "FanLang"
        ],
        "extensions": [
          ".fan"
        ],
        "configuration": "./fanlang.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fan",
        "scopeName": "source.fan",
        "path": "./fanlang.grammar.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kindy/vscode-fanlang.git"
  },
  "main": "./client/out/extension",
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^15.0.1",
    "@types/vscode": "^1.55.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
